<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_gridview_main"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_gridview_main_iamgeview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/disk_advertise_block" 
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/item_gridview_main_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="广告防御"
        android:textColor="@color/white_fontcolor"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

</LinearLayout>